

@model MyProWeb.Models.Domain.Order

<div class="row">
    <div class="col-md-12 text-center">
        <h1>Check Out Page</h1>
        <p>Please check your informations to corrects!</p>
    </div><hr />
    <div class="row">
       <div class="col-md-8">
            <h1><em>Informations</em></h1>
            <form method="post" enctype="multipart/form-data">
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label class="control-label">Your Name</label>
                        <input asp-for="Name" placeholder="Type your Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Address</label>
                        <input asp-for="Address" placeholder="Type your Address" class="form-control" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Phone Number</label>
                        <input asp-for="PhoneNumber" placeholder="Type your Phone Number" class="form-control" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Email</label>
                        <input asp-for="Email" placeholder="Type your Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>


                    <div class="card-footer row">
                        <button type="submit" style="width: 150px" class="btn btn-outline-primary">Process to book</button>
                    </div>

                </div>
            </form>
       </div>
       <div class="col-md-4">
           <h1> Total</h1>
           <hr />
            <p style="font-size: 50px"><strong>@ViewData["FormattedTotalAmount"]</strong></p>
       </div>
       
    </div>

</div>

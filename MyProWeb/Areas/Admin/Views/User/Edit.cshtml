@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model MyProWeb.Models.User

<section class="content">
    <div class="card card-primary" style="margin: 10px">
        <div class="card-header" style="background-color: #17a2b8;">
            <h3 class="card-title" style="color:white">Update User</h3>
        </div>

        <form asp-action="Edit" asp-route-Iduser="@Model.Iduser" enctype="multipart/form-data">
            <div class="card-body">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="NameUser" class="control-label"></label>
                    <textarea asp-for="NameUser" class="form-control" rows="3" placeholder="Name..."></textarea>
                    <span asp-validation-for="NameUser" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NameUser" class="control-label"></label>
                    <textarea asp-for="NameUser" class="form-control" rows="3" placeholder="Name..."></textarea>
                    <span asp-validation-for="NameUser" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PassUser" class="control-label"></label>
                    <textarea asp-for="PassUser" class="form-control" rows="3" placeholder="Password..."></textarea>
                    <span asp-validation-for="PassUser" class="text-danger"></span>
                </div>
                <div class="card-footer row">
                    <button type="submit" style="width: 150px" class="btn btn-info">Update</button>
                    <a asp-area="Admin" asp-controller="User" asp-action="Index" style="width: 150px; margin-left: 10px" class="btn btn-secondary">Back</a>
                </div>
            </div>
        </form>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script type="text/javascript">
        $(".custom-file-input").on("change", function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
        });
    </script>
}

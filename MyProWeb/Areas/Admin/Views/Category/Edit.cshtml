@model MyProWeb.Models.Category

<section class="content">
    <div class="card card-primary" style="margin: 10px">
        <div class="card-header" style="background-color: #17a2b8;">
            <h3 class="card-title" style="color:white">Update Category</h3>
        </div>

        <form asp-action="Edit" asp-route-Idcate="@Model.Idcate" enctype="multipart/form-data">
            <div class="card-body">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="NameCate" class="control-label"></label>
                    <input asp-for="NameCate" class="form-control" />
                    <span asp-validation-for="NameCate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ImgCate" class="control-label"></label>
                    <textarea asp-for="ImgCate" class="form-control" rows="3" placeholder="Image links..."></textarea>
                    <span asp-validation-for="ImgCate" class="text-danger"></span>
                </div>
                <div class="card-footer row">
                    <button asp-for="IdCategory" type="submit" style="width: 150px" class="btn btn-info">Update</button>
                    <a asp-area="Admin" asp-controller="Cate" asp-action="Index" type="submit" style="width: 150px; margin-left: 10px" class="btn btn-secondary ">Back</a>
                </div>
            </div>
        </form>
    </div>
</section>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script type="text/javascript">
        $(".custom-file-input").on("change", function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
        });


    </script>
}
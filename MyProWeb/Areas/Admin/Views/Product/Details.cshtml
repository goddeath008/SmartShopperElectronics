@model MyProWeb.Models.Product
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Details";
}



<div class="card card-primary">
    <div class="card-header">

        <h3 class="card-title" style="color:white">Details Product</h3>
    </div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NamePro)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NamePro)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ImgPro)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ImgPro)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IdbrandNavigation.NameBrand)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdbrandNavigation.NameBrand)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IdcateNavigation.NameCate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdcateNavigation.NameCate)
        </dd>
        <br />
        <dd class="col-sm-10">
            <img src="@Model.ImgPro"/>
        </dd>
        
    </dl>
    <div>
        <a style="width: 150px" class="btn btn-danger" asp-action="Edit" asp-route-id="@Model?.Idpro">Edit</a> |
        <a style="width: 150px; margin-left: 10px" class="btn btn-secondary " asp-action="Index">Back</a>
    </div>
</div>


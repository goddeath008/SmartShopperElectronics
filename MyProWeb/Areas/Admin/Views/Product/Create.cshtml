@model MyProWeb.Models.Product

@{
    
    
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


<hr />
<div class="card card-primary">
    <div class="card-header">

        <h3 class="card-title" style="color:white">Create New Product</h3>
    </div>
    <form method="post" asp-action="Create">
        <div class="card-body">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NamePro" class="control-label"></label>
                <input asp-for="NamePro" placeholder="Type Name Product..." class="form-control" />
                <span asp-validation-for="NamePro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" placeholder="Product Price..." class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Idcate" class="control-label"></label>
                <select asp-for="Idcate" class="form-control" asp-items="ViewBag.CategoryId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Idbrand" class="control-label"></label>
                <select asp-for="Idbrand" class="form-control" asp-items="ViewBag.BrandId"></select>
            </div>
            @* <div class="form-group">
                <label asp-for="Iduser" class="control-label"></label>
                <select asp-for="Iduser" class="form-control" asp-items="ViewBag.UserId"></select>
            </div> *@
            <div class="form-group">
                <label asp-for="ImgPro" class="control-label"></label>
                <textarea asp-for="ImgPro" class="form-control" rows="3" placeholder="Link Image"></textarea>
                <span asp-validation-for="ImgPro" class="text-danger"></span>
            </div>
            <div class="card-footer row">
                <button type="submit" style="width: 150px" class="btn btn-primary">Create</button>
                <a asp-controller="Product" asp-action="Index" type="submit" style="width: 150px; margin-left: 10px" class="btn btn-secondary ">Back</a>
            </div>
        </div>
    </form>

</div>



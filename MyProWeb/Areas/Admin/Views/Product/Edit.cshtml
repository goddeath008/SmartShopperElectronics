@model MyProWeb.Models.Product

@{
    ViewData["Title"] = "Edit";
}

<hr />
<div class="card card-primary">
    <div class="card-header">

        <h3 class="card-title" style="color:white">Update Product</h3>
    </div>
    <form asp-action="Edit" asp-route-id="@Model.Idpro">
        <div class="card-body">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Idpro" />
            <div class="form-group">
                <label asp-for="NamePro" class="control-label"></label>
                <input asp-for="NamePro" class="form-control" />
                <span asp-validation-for="NamePro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdcateNavigation.NameCate" class="control-label"></label>
                <select asp-for="Idcate" class="form-control" asp-items="ViewBag.CategoryId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Idbrand" class="control-label"></label>
                <select asp-for="Idbrand" class="form-control" asp-items="ViewBag.BrandId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ImgPro" class="control-label"></label>
                <input asp-for="ImgPro" class="form-control" />
                <span asp-validation-for="ImgPro" class="text-danger"></span>
            </div>
            <div class="card-footer row">
                <button asp-for="Idpro" type="submit" style="width: 150px" class="btn btn-primary">Update</button>
                <a asp-controller="Product" asp-action="Index" type="submit" style="width: 150px; margin-left: 10px" class="btn btn-secondary ">Back</a>
            </div>
        </div>
    </form>
</div>




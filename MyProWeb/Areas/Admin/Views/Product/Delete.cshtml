@model MyProWeb.Models.Product
@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">
        
        <dd style="position: center; font-size: 30px" class="col-sm-10">
            @Html.DisplayFor(model => model.NamePro)
        </dd>
        
        <dd style="position: center; font-size: 30px" class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
       
        <dd class="col-sm-10">
            <img src="@Model.ImgPro" alt="@(Model.NamePro)" asp-append-version="true" style="border-radius:20px ;width: 150px; height: 150px;">
        </dd>
     
    </dl>
    
    <form asp-action="Delete" asp-route-id="@Model.Idpro">
        <input type="hidden" asp-for="Idpro" />
        <button  type="submit" style="width: 150px" class="btn btn-danger">Delete</button>
        <a asp-action="Index" type="submit" style="width: 150px; margin-left: 10px" class="btn btn-secondary ">Back</a>
    </form>
</div>

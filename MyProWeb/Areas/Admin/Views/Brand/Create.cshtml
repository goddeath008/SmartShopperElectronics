@model MyProWeb.Models.Brand
<div class="card card-primary">
    <div class="card-header">

        <h3 class="card-title" style="color:white">Create New Brand</h3>
    </div>
    <form method="post" enctype="multipart/form-data">
        <div class="card-body">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Brand Name</label>
                <input asp-for="NameBrand" placeholder="Brand Name" class="form-control" />
                <span asp-validation-for="NameBrand" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label class="control-label">Link Image</label>
                <input asp-for="ImgBrand" class="form-control" />
                <span asp-validation-for="ImgBrand" class="text-danger"></span>
            </div>


            <div class="card-footer row">
                <button type="submit" style="width: 150px" class="btn btn-primary">Create</button>
                <a asp-controller="Brand" asp-action="Index" type="submit" style="width: 150px; margin-left: 10px" class="btn btn-secondary ">Back</a>
            </div>

        </div>
    </form>
</div>





@{
}
@model MyProWeb.Models.Brand
<div class="card card-primary" style="margin: 10px">
    <div class="card-header" style="background-color: #dc3545;">
        <h3 class="card-title" style="color:white">Delete Brand</h3>
    </div>
    <dl class="card-body">
        
        <dd class="col-sm-10" style="position: center; font-size: 30px">
            @Html.DisplayFor(model => model.NameBrand)
        </dd>
       
        <dd class="col-sm-10">
            <img  src="@Model.ImgBrand" alt="@(Model.NameBrand)" asp-append-version="true" style="border-radius:20px ;width: 150px; height: 150px;">
        </dd>
      
    </dl>

    <div class="card-footer row">
        <form asp-action="PostDelete">
            <input type="hidden" asp-for="Idbrand" />
            <button type="submit" style="width: 150px" class="btn btn-danger">Delete</button>
            <a asp-action="Index" type="submit" style="width: 150px; margin-left: 10px" class="btn btn-secondary ">Back</a>
        </form>
    </div>

</div>


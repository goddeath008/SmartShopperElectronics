@page "/admin/members"
@model MyProWeb.Areas.Admin.Pages.User.IndexModel
@{
    ViewData["Title"] = "List Members!";
}

<h2> @ViewData["Title"]</h2>

<partial name="_StatusMessage" model="@Model.StatusMessage" />
<p>Total Users: @Model.totalUsers</p>

 <table class="table">
     <tr>
        <th>User Name</th>
        <th>Role Name</th>
        <th>Actions</th>
     </tr>
    @foreach(var user in Model.users)
    {
        <tr>
            <td>@user.UserName</td>
            <td>
                @if (string.IsNullOrEmpty(user.RoleNames))
                {
                    <a class="text-dark" asp-page="./AddRole" asp-route-id="@user.Id"><i class="fas fa-plus"></i> Role</a>
                }
                else
                {
                    <a  asp-page="./AddRole" asp-route-id="@user.Id">@user.RoleNames</a>
                }
                
            </td>
            <td>
                
                <a class="btn btn-success btn-sm" asp-page="./SetPassword" asp-route-id="@user.Id">Set Password</a>
               
            </td>
        </tr>
    }
</table>
@{
    var pagingModel = new XTL.Helpers.PagingModel()
            {
                currentPage = Model.CurrentPage,
                countPage = Model.CountPages,
                generaUrl = (int? p) => Url.Page("./Index", new { p = p })


            };
}
<partial name="_PagingXTL" model="@pagingModel" />

@{
}
@model IEnumerable<MyProWeb.Models.Category>
<div class="uk-grid-small uk-child-width-1-2 uk-child-width-1-3@s uk-child-width-1-6@m"
     uk-grid>
    @foreach(var item in Model)
    {
        <div>
            <a asp-area="Customer" asp-controller="Filter" asp-action="SPTheoLoai"
               asp-route-loaiSp="@item.Idcate" class="uk-link-muted uk-text-center uk-display-block uk-padding-small uk-box-shadow-hover-large"
               >
                <div class="tm-ratio tm-ratio-4-3">
                    <div class="tm-media-box">
                        <figure class="tm-media-box-wrap">
                            <img class="item-brand"
                                 src="@item.ImgCate"
                                 alt="@item.NameCate" />
                        </figure>
                    </div>
                </div>
                <div class="uk-margin-small-top">
                    <div class="uk-text-truncate">
                        @item.NameCate
                    </div>
                   
                </div>
            </a>
        </div>
    }

</div>
<div class="uk-margin uk-text-center">
    <a class="uk-link-muted uk-text-uppercase tm-link-to-all"
       href="catalog.html">
        <span>see all categories</span><span uk-icon="icon: chevron-right; ratio: .75;"></span>
    </a>
</div>
